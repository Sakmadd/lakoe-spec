{
  "openapi": "3.0.3",
  "info": {
    "version": "1.0",
    "title": "LAKOE API SPECIFICATION",
    "description": "Ini adalah dokumentasi untuk spesifikasi API untuk aplikasi E-Commerce Lakoe",
    "contact": { "name": "Ahmad Safii", "email": "ahmadsafii.work@gmail.com" }
  },
  "servers": [
    {
      "url": "http://{environment}.lakoe.store/api/v1",
      "description": "Lakoe RESTful API",
      "variables": {
        "environment": {
          "description": "Server Environment",
          "default": "dev",
          "enum": ["dev", "prod"]
        }
      }
    }
  ],
  "paths": {
    "/auth/login": {
      "post": {
        "summary": "Seller login",
        "tags": ["Authentication"],
        "responses": {
          "200": {
            "description": "Login successful"
          },
          "401": {
            "description": "Invalid credentials"
          }
        }
      }
    },
    "/auth/register": {
      "post": {
        "summary": "Seller registration",
        "tags": ["Authentication"],
        "responses": {
          "201": {
            "description": "Registration successful"
          },
          "400": {
            "description": "Validation error"
          }
        }
      }
    },
    "/users": {
      "get": {
        "summary": "Get all users",
        "tags": ["Users"],
        "responses": {
          "200": {
            "description": "List of users"
          }
        }
      }
    },
    "/users/{id}": {
      "get": {
        "summary": "Get user by ID",
        "tags": ["Users"],
        "responses": {
          "200": {
            "description": "User details"
          },
          "404": {
            "description": "User not found"
          }
        }
      },
      "patch": {
        "summary": "Update user by ID",
        "tags": ["Users"],
        "responses": {
          "200": {
            "description": "User updated"
          },
          "404": {
            "description": "User not found"
          }
        }
      }
    },
    "/users/{id}/locations": {
      "get": {
        "summary": "Get user locations",
        "tags": ["Users"],
        "responses": {
          "200": {
            "description": "User locations"
          }
        }
      },
      "post": {
        "summary": "Add user location",
        "tags": ["Users"],
        "responses": {
          "201": {
            "description": "Location added"
          }
        }
      }
    },
    "/products": {
      "get": {
        "summary": "Get all products",
        "tags": ["Products"],
        "responses": {
          "200": {
            "description": "List of products"
          }
        }
      },
      "post": {
        "summary": "Create a product",
        "tags": ["Products"],
        "responses": {
          "201": {
            "description": "Product created"
          }
        }
      },
      "delete": {
        "summary": "Delete multiple products",
        "tags": ["Products"],
        "requestBody": {
          "description": "Array of product IDs",
          "required": true
        },
        "responses": {
          "204": {
            "description": "Products deleted"
          }
        }
      }
    },
    "/products/search": {
      "get": {
        "summary": "Search products",
        "tags": ["Products"],
        "parameters": [
          {
            "name": "keyword",
            "in": "query",
            "required": true,
            "description": "Search keyword",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Search results"
          }
        }
      }
    },
    "/products/{id}": {
      "get": {
        "summary": "Get product by ID",
        "tags": ["Products"],
        "responses": {
          "200": {
            "description": "Product details"
          },
          "404": {
            "description": "Product not found"
          }
        }
      },
      "patch": {
        "summary": "Update product by ID",
        "tags": ["Products"],
        "responses": {
          "200": {
            "description": "Product updated"
          },
          "404": {
            "description": "Product not found"
          }
        }
      },
      "delete": {
        "summary": "Delete product by ID",
        "tags": ["Products"],
        "responses": {
          "204": {
            "description": "Product deleted"
          },
          "404": {
            "description": "Product not found"
          }
        }
      }
    },
    "/products/{id}/toggle-active": {
      "patch": {
        "summary": "Toggle product active status",
        "tags": ["Products"],
        "responses": {
          "200": {
            "description": "Product status toggled"
          },
          "404": {
            "description": "Product not found"
          }
        }
      }
    },
    "/orders": {
      "get": {
        "summary": "Get all orders",
        "tags": ["Orders"],
        "responses": {
          "200": {
            "description": "List of orders"
          }
        }
      },
      "post": {
        "summary": "Create an order",
        "tags": ["Orders"],
        "responses": {
          "201": {
            "description": "Order created"
          }
        }
      }
    },
    "/orders/{id}": {
      "get": {
        "summary": "Get order by ID",
        "tags": ["Orders"],
        "responses": {
          "200": {
            "description": "Order details"
          },
          "404": {
            "description": "Order not found"
          }
        }
      },
      "patch": {
        "summary": "Update order by ID",
        "tags": ["Orders"],
        "responses": {
          "200": {
            "description": "Order updated"
          },
          "404": {
            "description": "Order not found"
          }
        }
      },
      "delete": {
        "summary": "Delete order by ID",
        "tags": ["Orders"],
        "responses": {
          "204": {
            "description": "Order deleted"
          },
          "404": {
            "description": "Order not found"
          }
        }
      }
    },
    "/orders/search": {
      "get": {
        "summary": "Search orders",
        "tags": ["Orders"],
        "parameters": [
          {
            "name": "keyword",
            "in": "query",
            "required": true,
            "description": "Search keyword",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Search results"
          }
        }
      }
    },
    "/orders/{id}/shipments": {
      "post": {
        "summary": "Create shipment for an order",
        "tags": ["Orders"],
        "responses": {
          "201": {
            "description": "Shipment created"
          }
        }
      },
      "get": {
        "summary": "Get shipment for an order",
        "tags": ["Orders"],
        "responses": {
          "200": {
            "description": "Shipment details"
          }
        }
      }
    },
    "/orders/{id}/payment": {
      "post": {
        "summary": "Create payment for an order",
        "tags": ["Orders"],
        "responses": {
          "201": {
            "description": "Payment created"
          }
        }
      }
    }
  }
}
